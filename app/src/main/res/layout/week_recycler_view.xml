<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.WeekFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.33">

            <TextView
                android:id="@+id/day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_text_example"
                style="@style/MainTextTheme"/>

        </LinearLayout>

        <TextView
            android:id="@+id/day_of_week_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.165"
            style="@style/IncomeTextStyle"/>

        <TextView
            android:id="@+id/day_of_week_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.165"
            style="@style/ExpensesTextStyle"/>

        <TextView
            android:id="@+id/day_of_week_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            style="@style/MainTextTheme"/>

    </LinearLayout>
</layout>
